/* miniprogram/pages/intro/intro.wxss */

/* 头部样式 */
custom{
  display:block;
  position:relative;

}
custom bar{
  padding-right:110px;
  box-shadow:0px 0px 0px !important;
}
.fixed{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1024;
  box-sizing: border-box;
}
.gradual-blue{
  background-image:linear-gradient(45deg, #0081ff, #1cbbb4) !important;
  color:#fff !important; 
}
.action{
  display:flex;
  align-items:center;
  height:100%;
  max-width:100%;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.action .iconfont{
  font-size: 34rpx;
}


/*分享对话弹框*/
.share-dialog{
  font-size: 28rpx;
}
.share-explain{
  padding: 40rpx 20rpx;
  background: linear-gradient(to top right, #0081ff , #1cbbb4);
  color: #ffffff;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.share-explain .title{
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.share-explain .explain{
  font-size: 24rpx;
}
.share-explain .hint{
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #a2fbff; 
}
.share-explain .big-txt{
  font-size: 34rpx;
  color: #ffffff;
  margin: 0 10rpx;
}

.share-dialog .share-btn{
  height: 60rpx;
  width: 350rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #1cbbb4;
  box-sizing: border-box;
  border: 1px solid #1cbbb4;
  border-radius: 500px;
  margin: 30rpx auto;
}
.share-dialog .pay-btn{
  height: 60rpx;
  width: 350rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #1cbbb4;
  background-color: #ffffff;
  box-sizing: border-box;
  border: 1px solid #1cbbb4;
  border-radius: 500px;
  margin: 30rpx auto;
}

/* 等级展示栏 */
.unit-container{
  background-color: #ffffff;
  margin: 20rpx 0;
  width: 100%;
}
.unit-title{
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
}
.unit-title .left-box{
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  height: 80rpx;
}
.unit-title .left-box .title{
  font-size: 30rpx;
  line-height: 1.5;
}
.unit-title .left-box .explain{
  font-size: 22rpx;
  color: #999999;
  line-height: 1.5;
}
.unit-title .right-box{
  font-size: 28rpx;

}

.buy-box{
  padding: 10rpx 30rpx 20rpx;
  display: flex;
  align-items: center;
}
.buy-box .box-left{
  flex:1;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}
.box-left .number-box{
  display: flex;
  width: 170rpx;
  height: 50rpx;
  justify-items: center;
  border: 1rpx solid #dddddd;
  border-radius: 5rpx;
  box-sizing: content-box;
  margin: 0 15rpx;
  overflow: hidden;
}
.box-left .number-box .iconfont{
  display: block;
  height: 50rpx;
  line-height: 50rpx;
  width: 50rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: #888888;
  font-size: 30rpx;
}
.box-left .number-box .iconfont.icon-minus{
  border-right: 1rpx solid #dddddd;
}
.box-left .number-box .iconfont.icon-add{
  border-left: 1rpx solid #dddddd;
}
.box-left .number-box .num-input{
  flex: 1;
  height: 50rpx;
  font-size: 30rpx;
  text-align: center;
}

.buy-box .buy-btn{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  background-color: #ff9700;
  color:#ffffff;
  padding: 0 10rpx;
  min-width: 180rpx;
}

/* 简历内容样式 */
.intro-container{
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background-color: #ffffff;
  margin: 20rpx 0; 
}
.intro-unit .title{
  font-size: 32rpx;
  line-height: 1.5;
}
.intro-unit .unit-con{
  font-size: 24rpx;
  color: #888888;
  display: flex;
  flex-direction: column;
  margin: 10rpx auto;
}
.intro-unit .unit-con .row{
  display: flex;
  align-items: center;
}
.intro-unit .unit-con .row.space-between{
  justify-content: space-between;
}
.intro-unit .unit-con .row .col{
  flex: 1;
}
.intro-unit .unit-con .row .mar-col{
  margin-right: 10rpx;
}

.intro-unit .unit-con .con-title{
  font-size: 28rpx;
  color: #444444;
}


/* 底部操作栏 */
.fixed-btn-outer{
  height: 120rpx;
  width: 100%;
}
.fixed-btn-box{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  border-top: 1rpx solid #dddddd;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.fixed-btn-box .btn{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background-color: #ff9700;
  color:#ffffff;
  padding: 0 20rpx;
  width: 280rpx;
}
.fixed-btn-box .btn.bg-blue{
  background-color: #1cbbb4;
}

/* 支付弹框 */
.pay-container{
  width: 100%;
}
.pay-container .head-title{
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 34rpx;
}
.pay-container .head-title .iconfont{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 48rpx;
  display: block;
  height: 90rpx;
  line-height: 90rpx;
  width: 90rpx;
  text-align: center;
  color: #888888;
}

.pay-container .row{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 90rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #eeeeee;
}
.pay-container .row .gray{
  color: #888888;
}
.pay-container .row .big-txt{
  font-size: 36rpx;
}

.pay-container .row.marB{
  margin-bottom: 200rpx;
}

.pay-container .pay-btn{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 36rpx;
  background-color: #ff9700;
  color:#ffffff;
  padding: 0 20rpx;
  width: 700rpx;
  margin: 20rpx auto;
}