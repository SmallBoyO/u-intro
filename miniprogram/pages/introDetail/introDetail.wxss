/* 简历内容样式 */
.intro-container{
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background-color: #ffffff;
  margin: 0; 
}
.intro-container .pic-box{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 160rpx;
  border-bottom: 1rpx dashed #cccccc;
} 
.intro-container .pic-box .pic{
  width: 130rpx;
  height: 130rpx;
  overflow: hidden;
  border-radius: 100%;
  background-color: #cccccc;
}
.intro-container .pic-box .pic image{
  width: 100%;
  height: 100%;
}

.intro-unit .title{
  display: flex;
  align-items: center;
  font-size: 32rpx;
  height: 50rpx;
  margin-top: 20rpx;
}
.intro-unit .title::before{
  display: block;
  content: "";
  line-height: 0;
  font-size: 0;
  height: 30rpx;
  width: 8rpx;
  background-color: #0081ff;
  margin-right: 10rpx;
}
.intro-container .btn{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  background-color: #ff9700;
  color:#ffffff;
  padding: 0 10rpx;
  min-width: 180rpx;
}
.intro-unit .unit-con{
  font-size: 24rpx;
  color: #888888;
  display: flex;
  flex-direction: column;
  margin: 10rpx auto;
  line-height: 1.5;
}
.intro-unit .unit-con .row{
  display: flex;
  align-items: center;
}
.intro-unit .unit-con .row.space-between{
  justify-content: space-between;
}
.intro-unit .unit-con .row .col{
  flex: 1;
}
.intro-unit .unit-con .row .mar-col{
  margin-right: 10rpx;
}

.intro-unit .unit-con .con-title{
  font-size: 28rpx;
  color: #444444;
}


