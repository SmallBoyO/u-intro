/* miniprogram/pages/login/login.wxss */
.login_page{
  height: 100%;
  background: linear-gradient(to top right, #0081ff , #1cbbb4);
}
.tab_container{
  position: relative;
  width: 100%;
  height: 100%;
  top: 50%;
  left: 50%;
}
.tab{
  height: 200rpx;
  width: 500rpx;
  margin-top: -100rpx;
  margin-left: -125px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tab-title{
  color: #ffffff;
  font-size: 48rpx;
}
.tab-des{
  color: #ffffff;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.auth{
  color: white;
  background: linear-gradient(to top right, #0081ff , #1cbbb4);
  border-radius: 0;
}