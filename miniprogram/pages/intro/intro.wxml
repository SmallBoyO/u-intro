<!--miniprogram/pages/intro/intro.wxml-->
<custom style="height:{{CustomBar}}px;">
  <bar class="fixed gradual-blue" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
    <navigator class='action' open-type="navigateBack" delta="1" hover-class="none">
      <text class="iconfont icon-xiangzuo"></text>
      <text>返回</text> 
    </navigator>
  </bar>
</custom>

<view class="intro-box">
  <text>姓名：{{introInfo.name}}</text>
  <text>电话：{{phone}}</text>
  <text>出生日期：{{introInfo.birthday}}</text>
  <text>居住地址：{{introInfo.address}}</text>
</view>
<view class="btn-box">
  <button bindtap='deleteIntro'>删除</button>
  <button type="warn" open-type="share" data-id="{{introId}}">发送微信给好友</button>
</view>


