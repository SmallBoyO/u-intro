/* miniprogram/pages/addintro/addintro.wxss */
.container{
  display: flex;
  flex-direction:column;
}
.field{
  width:95%;
  display: flex;
  flex-direction:row;
  align-items:center;
  flex-wrap:nowrap;
  justify-content:space-between;
  margin: 10rpx 0rpx 10rpx rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom:1px solid #bbb;
}
.field .grow{
  flex-grow:2;
}
.field .chooseimage{
  font-size: 36rpx;
  color:#888;
}
.field .placeholder{
  width: 30%;
  font-size: 36rpx;
  color:#444;
}
.headimage_container{
  height: 100rpx;
  width:100rpx;
  overflow: hidden;
}
.headimage_container image{
  height: 100rpx;
  width:100rpx;
  border-radius: 50%;
}